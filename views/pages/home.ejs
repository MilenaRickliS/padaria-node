  <script>

  class DarkModeToggle {
    constructor(element) {
      this.element = element;
      this.checkbox = element.querySelector('input[type="checkbox"]');
      this.body = document.querySelector('body');

      this.checkbox.addEventListener('change', this.toggleDarkMode.bind(this));
    }

    toggleDarkMode() {
      this.body.classList.toggle('dark');
    }
  }

  class DarkModeToggleFactory {
    createToggle(element) {
      if (element.tagName === 'DIV') {
        return new DarkModeToggle(element);
      } else {
        throw new Error('Invalid element type');
      }
    }
  }

  const factory = new DarkModeToggleFactory();
  const toggles = document.querySelectorAll('div');

  toggles.forEach((element) => {
    factory.createToggle(element);
  });
